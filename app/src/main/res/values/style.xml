<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MaterialSearch" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/white</item>
<!--        <item name="android:windowContentOverlay">@null</item>-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.7</item>
        <item name="android:overScrollMode">never</item>
    </style>
    <style name="PopupMenuStyle" parent="Theme.AppCompat.Light">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="searchText" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:textCursorDrawable">@color/darkGrey</item>
    </style>
    <style name="RadioBold" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="RadioNormal" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textStyle">normal</item>
    </style>

</resources>