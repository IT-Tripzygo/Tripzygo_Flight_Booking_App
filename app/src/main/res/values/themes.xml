<resources >
    <!-- Base application theme. -->
    <style name="Theme.TripzygoFlightBookingApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blackLight</item>
        <item name="colorSecondary">@color/blackLight</item>
        <item name="colorButtonNormal">@color/blackLight</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/blackLight</item>
        <item name="materialCalendarTheme"> @style/materialCalendarTheme</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/arial</item>
    </style>
    <style name="Theme.meet" parent="Theme.TripzygoFlightBookingApp" />
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slid_in_bottom_sheet</item>
        <item name="android:windowExitAnimation">@anim/slid_out_bottom_sheet</item>
    </style>
    <style name="imageRotate">
        <item name="android:animation">@anim/rotate</item>
    </style>
<style name="materialCalendarTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar"/>
    <style name="CalendarTheme" parent="Theme.AppCompat">
        <item name="color">#B821DA</item>
        <item name="android:headerBackground">@color/blue</item>
        <item name="colorButtonNormal">@color/white</item>
    </style>

    <style name="FragmentNavigation">
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="fontFamily">@values/font_certs</item>
    </style>
</resources>