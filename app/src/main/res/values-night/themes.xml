<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TripzygoFlightBookingApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#6842FF</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slid_in_bottom_sheet</item>
        <item name="android:windowExitAnimation">@anim/slid_out_bottom_sheet</item>
    </style>
    <style name="imageRotate">
        <item name="android:animation">@anim/rotate</item>
    </style>

    <style name="CalendarTheme" parent="Theme.AppCompat">
        <item name="color">#B821DA</item>
        <item name="android:headerBackground">@color/blue</item>
        <item name="colorButtonNormal">@color/white</item>
    </style>

    <style name="FragmentNavigation">
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="fontFamily">@values/font_certs</item>
    </style>
</resources>