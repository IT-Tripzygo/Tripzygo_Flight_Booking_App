<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PaymentActivity">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_checkOut"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@drawable/refs"
            app:navigationIcon="@drawable/baseline_arrow_back_24">


        </com.google.android.material.appbar.MaterialToolbar>

        <TextView
            android:id="@+id/DepartureCityText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar_checkOut"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:text="Delhi"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/arrowImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar_checkOut"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@id/DepartureCityText"
            android:src="@drawable/baseline_arrow_forward_24" />

        <TextView
            android:id="@+id/ArrivalCityText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar_checkOut"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/arrowImage"
            android:padding="5dp"
            android:text="Indore"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/classText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/DepartureCityText"
            android:layout_marginStart="10dp"
            android:elevation="5dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="Economy"
            android:textColor="@color/darkGrey"
            android:textSize="11sp" />

        <View
            android:id="@+id/view2"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_below="@id/DepartureCityText"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/classText"
            android:background="@drawable/viewback1"
            android:padding="5dp" />

        <TextView
            android:id="@+id/stopText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/DepartureCityText"
            android:layout_toEndOf="@id/view2"
            android:elevation="5dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="Non-stop"
            android:textColor="@color/darkGrey"
            android:textSize="11sp" />

        <View
            android:id="@+id/view3"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_below="@id/DepartureCityText"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@id/stopText"
            android:background="@drawable/viewback1"
            android:padding="5dp" />

        <TextView
            android:id="@+id/timeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ArrivalCityText"
            android:layout_toEndOf="@id/view3"
            android:elevation="5dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="1h 259m"
            android:textColor="@color/darkGrey"
            android:textSize="11sp" />

        <View
            android:id="@+id/viewsept"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_below="@id/timeText"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/viewsepertor" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/flightDetailRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/viewsept"
            tools:itemCount="2"
            tools:listitem="@layout/flight_detail_layout" />

        <RelativeLayout
            android:id="@+id/returnFLightLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/flightDetailRecycler">

            <TextView
                android:id="@+id/returnDepartureCityText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:text="Delhi"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/returnarrowImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@id/returnDepartureCityText"
                android:src="@drawable/baseline_arrow_forward_24" />

            <TextView
                android:id="@+id/returnArrivalCityText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/returnarrowImage"
                android:padding="5dp"
                android:text="Indore"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/returnclassText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/returnDepartureCityText"
                android:layout_marginStart="10dp"
                android:elevation="5dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="Economy"
                android:textColor="@color/darkGrey"
                android:textSize="11sp" />

            <View
                android:id="@+id/returnview2"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_below="@id/returnDepartureCityText"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@id/returnclassText"
                android:background="@drawable/viewback1"
                android:padding="5dp" />

            <TextView
                android:id="@+id/returnstopText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/returnDepartureCityText"
                android:layout_toEndOf="@id/returnview2"
                android:elevation="5dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="Non-stop"
                android:textColor="@color/darkGrey"
                android:textSize="11sp" />

            <View
                android:id="@+id/returnview3"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_below="@id/returnDepartureCityText"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="6dp"
                android:layout_toEndOf="@id/returnstopText"
                android:background="@drawable/viewback1"
                android:padding="5dp" />

            <TextView
                android:id="@+id/returntimeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/returnArrivalCityText"
                android:layout_toEndOf="@id/returnview3"
                android:elevation="5dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="1h 25m"
                android:textColor="@color/darkGrey"
                android:textSize="11sp" />

            <View
                android:id="@+id/returnviewsept"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_below="@id/returntimeText"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/viewsepertor" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/returnflightDetailRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/returnviewsept"
                tools:itemCount="2"
                tools:listitem="@layout/flight_detail_layout" />
        </RelativeLayout>


        <TextView
            android:id="@+id/selectTravellerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/returnFLightLayout"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:padding="3dp"
            android:text="Select Travellers"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/AdultText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/selectTravellerText"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:padding="4dp"
            android:text="Adults"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/AdultNoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/viewsept2"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="right"
            android:padding="4dp"
            android:text="1/1 Traveller"
            android:textColor="@color/darkGrey"
            android:textSize="12sp"
            android:textStyle="normal" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/passengerRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/AdultText"
            tools:itemCount="2"
            tools:listitem="@layout/passesnger_layout" />


        <View
            android:id="@+id/viewsept3"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_below="@id/passengerRecycler"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/viewsepertor" />

        <TextView
            android:id="@+id/ChangeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/viewsept3"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:text="Change Traveller"
            android:textColor="@color/blue"
            android:textSize="20sp"
            android:textStyle="normal"
            app:drawableEndCompat="@drawable/baseline_arrow_forward_ios_24"
            app:drawableTint="@color/grey" />

        <View
            android:id="@+id/viewsept4"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_below="@id/ChangeText"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/viewsepertor" />

        <TextView
            android:id="@+id/ContactText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/viewsept4"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:padding="3dp"
            android:text="Contact Details"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/msgText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ContactText"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:padding="4dp"
            android:text="Your Ticket details will be shared here"
            android:textColor="@color/darkGrey"
            android:textSize="13sp"
            android:textStyle="normal" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/login_rel1_email"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/msgText"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:enabled="true"
            android:hint="Email"
            android:orientation="vertical"
            android:textColorHint="@color/darkGrey"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxStrokeColor="@color/darkGrey"
            app:boxStrokeWidth="1dp"
            app:errorEnabled="true"
            app:expandedHintEnabled="true"
            app:hintAnimationEnabled="true"
            app:hintEnabled="true"
            app:hintTextAppearance="?attr/textAppearanceCaption"
            app:hintTextColor="@color/darkGrey"
            app:startIconTint="#212121">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/profile_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:textColor="@color/darkGrey"
                android:textColorHint="@color/darkGrey"
                android:textSize="15sp" />
        </com.google.android.material.textfield.TextInputLayout>


        <LinearLayout
            android:id="@+id/login_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_rel1_email"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edittext_bg">

            <com.hbb20.CountryCodePicker
                android:id="@+id/country_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textAlignment="gravity"
                app:ccpDialog_background="@color/white"
                app:ccpDialog_searchEditTextTint="@color/white"
                app:ccpDialog_textColor="@color/darkGrey"
                app:ccp_contentColor="@color/darkGrey"
                app:ccp_padding="10dp"
                app:ccp_showArrow="false"
                app:ccp_showFlag="true"
                app:ccp_showNameCode="false"
                app:ccp_showPhoneCode="true"
                app:ccp_textGravity="CENTER"
                app:ccp_textSize="18sp"
                app:ccp_useFlagEmoji="false" />


            <EditText
                android:id="@+id/payment_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@drawable/edittext_bg2"
                android:hint="Mobile Number"
                android:inputType="phone"
                android:maxLength="10"
                android:padding="5dp"
                android:paddingStart="10dp"
                android:textColor="@color/darkGrey"
                android:textColorHint="@color/darkGrey"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/agree_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_input"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="2dp"
                android:text="I confirm that i have read, understood and agree with the Fare Rules, Privacy Policy and Term Of Use" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@id/agree_input"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bookrelativeback">

            <TextView
                android:id="@+id/price_flight_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:text="₹ 4699"
                android:textColor="@color/white"
                android:textSize="23sp" />

            <Button
                android:id="@+id/checkout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="25dp"
                android:backgroundTint="#FA6C26"
                android:text="Checkout"
                android:textAllCaps="false"
                android:textColor="@color/white" />
        </RelativeLayout>


    </RelativeLayout>
</androidx.core.widget.NestedScrollView>
