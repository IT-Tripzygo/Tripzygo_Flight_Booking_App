<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f2f2f2"
        tools:context=".Fragments.Profile">

        <RelativeLayout
            android:id="@+id/profile_edit_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/card_insight_progress"
            android:backgroundTint="@color/white"
            android:elevation="5dp">

            <RelativeLayout
                android:id="@+id/profile_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_insight_progress"
                android:elevation="10dp"
                android:padding="5dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="15dp"
                    android:elevation="5dp"
                    android:src="@drawable/avatar" />

                <TextView
                    android:id="@+id/profile_name_profilePage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginEnd="5dp"
                    android:layout_toRightOf="@id/profile_image"
                    android:gravity="center"
                    android:text="Meet Vani"
                    android:textColor="#ffffff"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/profile_email_profilePage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profile_name_profilePage"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_toRightOf="@id/profile_image"
                    android:gravity="center"
                    android:text="meetvani6@gmail.com"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />
            </RelativeLayout>


            <TextView
                android:id="@+id/edit_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_layout"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="Edit Profile"
                android:textColor="#424242"
                android:textSize="18sp"
                app:drawableLeftCompat="@drawable/edit_profile" />

            <TextView
                android:id="@+id/myBooking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edit_profile"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:drawableStart="@drawable/outline_bookmark_added_24"
                android:drawablePadding="10dp"
                android:drawableTint="#6842FF"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="My Bookings"
                android:textColor="#424242"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/customerService"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/myBooking"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:drawableStart="@drawable/outline_contact_phone_24"
                android:drawablePadding="10dp"
                android:drawableTint="#6842FF"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="Customer Service"
                android:textColor="#424242"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/notifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/customerService"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:drawableStart="@drawable/baseline_notifications_24"
                android:drawablePadding="10dp"
                android:drawableTint="#6842FF"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="Notifications"
                android:textColor="#424242"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/notifications"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="Share with Friends"
                android:textColor="#424242"
                android:textSize="18sp"
                app:drawableLeftCompat="@drawable/ic_baseline_share_24" />

            <TextView
                android:id="@+id/rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/share"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:drawablePadding="10dp"
                android:drawableTint="@color/blue"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="Rate Us"
                android:textColor="#424242"
                android:textSize="18sp"
                app:drawableLeftCompat="@drawable/baseline_star_rate_24" />

            <TextView
                android:id="@+id/faq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rate"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:drawableStart="@drawable/ic_outline_question_answer_24"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="FAQ's"
                android:textColor="#424242"
                android:textSize="18sp" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/profile_logout_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/profile_edit_layout"
            android:layout_marginStart="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/card_insight_progress"
            android:backgroundTint="@color/white"
            android:elevation="15dp"
            android:padding="5dp">

            <TextView
                android:id="@+id/version_no_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="5dp"
                android:layout_toStartOf="@id/separator"
                android:text="Version 1.0.7"
                android:textColor="@color/blue"
                android:textSize="14sp" />

            <View
                android:id="@+id/separator"
                android:layout_width="15dp"
                android:layout_height="20sp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/line_vertical"
                android:rotation="90" />

            <TextView
                android:id="@+id/privacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/separator"
                android:text="Privacy Policy"
                android:textColor="@color/blue"
                android:textSize="14sp" />

            <Button
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/version_no_"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button_login"
                android:foreground="#00000000"
                android:text="Logout"
                android:textAllCaps="false"
                android:textSize="18sp"
                app:backgroundTint="@color/blue" />
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>